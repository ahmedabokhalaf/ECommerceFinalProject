@model List<OrderDetails>
<h1>Orders</h1>
<a asp-action="Add" asp-controller="Order" class="btn btn-primary">Add New Order</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Order For User</th>
            <th scope="col">Total Price</th>
            <th scope="col">Payment Type</th>
            <th scope="col">Status</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(OrderDetails item in Model){
            <tr>
                <th scope="row">1</th>
                <td>@item.User.FirstName @item.User.LastName</td>
                <td>@item.TotalPrice</td>
                <td>@item.Type</td>
                <td>@item.Status</td>
                <td class="text-end">
                    <a class="btn d-inline-flex btn-sm btn-neutral border-base mx-1" asp-controller="Order" asp-action="OrderInfo" asp-route-id="@item.Id">
                        <span class="h3 font-bold">Details</span>
                    </a>
                        <a class="btn d-inline-flex btn-sm btn-neutral border-base mx-1" asp-controller="Order" asp-action="Edit" asp-route-id="@item.Id">
                        <span class="h3 font-bold pe-2"> <i class="bi bi-pencil h3 font-bold"></i> </span>
                        <span class="h3 font-bold">Edit</span>
                    </a>
                    <a class="btn btn-danger btn btn-sm btn-square  text-danger-hover h3 font-bold " asp-controller="Order" asp-action="Delete" asp-route-id="@item.Id"> <i class="bi bi-trash h3 font-bold text-white"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>