 <h1> Edit Brands</h1>

<a asp-controller="Brand" asp-action="AllBrand">
    <i class="bi bi-arrow-left " style="font-size:3rem"></i>
</a>
<div class="alert alert-success" role="alert" style="display:none;" id="Mgs">
    <h4 class="alert-heading">Well done!</h4>
    <p>you successfully Edit. </p>
    <hr>
    <p class="mb-0"><a asp-controller="Brand" asp-action="AllBrand">Back to Brands</a>.</p>
</div>
<div class="col-10 mx-auto">
    <div class="card shadow border-0">
        <div class="card-body">
            <div class="row">
                <form data-ajax="true" data-ajax-loading="#loader" data-ajax-complete="BrandUpdated" method="GET" action="/Brand/ConfirmEdite">
                    <div asp-validation-summary="ModelOnly"></div>

                     <div class="form-group">
                        <label>ID</label>
                          <input name="Id" value="@Model.Id" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label>Name</label>
                        <input name="Name" value="@Model.Name" class="form-control" />
                    </div>

                    
                    <input class="col-4 btn  col-1 btn btn-primary" type="submit" value="Update">
                    
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    function BrandUpdated(data) {
        document.getElementById("Mgs")
            .style.display = "block";
    }
</script>
 
