@using ITI.ElectroDev.Models
@using X.PagedList
@model IPagedList<Category>

<header class="bg-surface-primary border-bottom pt-6">
    <div class="container-fluid">
        <div class="mb-npx">
            <div class="row align-items-center">
                <div class="col-sm-6 col-12 mb-4 mb-sm-0">
                    <!-- Title -->
                    <h1 class="h3 mb-0 ls-tight">Categories</h1>
                </div> <!-- Actions -->
                <div class="col-sm-6 col-12 text-sm-end mb-4" >
                    <div class="mx-n1">
                        <a class="btn d-inline-flex btn-sm btn-primary mt-5 mx-1" asp-controller="Category" asp-action="Add">
                            <span class=" pe-2"> <i class="bi bi-plus h4  text-white"></i> </span>
                            <span class="h4 text-white">Add New Category</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<main class="bg-surface-primary border-bottom pt-6 mt-5">
    <div class="container-fluid mt-5 mb-5">
        @if (Model.ToList<Category>().Count != 0)
        {
            <partial name="_PagedCategories" model="@Model"></partial>
        }else{
            <div class="alert alert-danger text-center" role="alert">
                <i class="bi bi-exclamation-triangle"></i>
                No , Categorty Found .

            </div>
           
        }
            
    </div>
</main>
       
